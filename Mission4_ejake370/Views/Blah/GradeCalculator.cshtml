@model GradeCalculatorModel;



<h3>Grade Calculator</h3>

<!--Form used to calculate final grade/letter grade-->
<p style="font-style:italic">Enter percentage for each grade category</p>

<form method="post" >
    <label>Assignments</label>
    <input id="assignments" asp-for="Assignments" /><br />
    <label>Group Project</label>
    <input id="grpProject"  asp-for="GroupProject"/><br />
    <label>Quizzes</label>
    <input id="quizzes" asp-for="Quizzes"/><br />
    <label>Midterm Exam</label>
    <input id="midterm" asp-for="Midterm"/><br />
    <label>Final Exam</label>
    <input id="final" asp-for="Final"/><br />
    <label>INTEX</label>
    <input id="intex" asp-for="Intex"/><br />
    <input id="calculate" type="submit" value="See Score" />


    <div asp-validation-summary="All"></div>

</form>

<p>Final Grade: <span class="score"></span> %</p>
<p>Letter Grade: <span class="letter_grade"></span></p>

<script src="~/js/calculator.js"></script>